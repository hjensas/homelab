kind: Network
metadata:
  name: cluster
spec:
  defaultNetwork:
    ovnKubernetesConfig:
      gatewayConfig:
{% if ovn_k8s_gateway_config_ip_forwarding %}
        ipForwarding: Global
{% endif %}
        routingViaHost: {{ ovn_k8s_gateway_config_host_routing }}
