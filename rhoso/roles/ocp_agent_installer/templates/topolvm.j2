---
apiVersion: v1
kind: Namespace
metadata:
  labels:
    openshift.io/cluster-monitoring: "true"
    pod-security.kubernetes.io/enforce: privileged
    pod-security.kubernetes.io/audit: privileged
    pod-security.kubernetes.io/warn: privileged
  name: {{ topolvms_namespace }}
---
apiVersion: operators.coreos.com/v1
kind: OperatorGroup
metadata:
  name: {{ topolvms_namespace }}-operatorgroup
  namespace: {{ topolvms_namespace }}
spec:
  targetNamespaces:
  - {{ topolvms_namespace }}
---
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: lvms
  namespace: {{ topolvms_namespace }}
spec:
  installPlanApproval: Automatic
  name: lvms-operator
  source: redhat-operators
  sourceNamespace: openshift-marketplace
---
apiVersion: lvm.topolvm.io/v1alpha1
kind: LVMCluster
metadata:
  name: {{ topolvms_cluster_name }}
  namespace: {{ topolvms_namespace }}
spec:
  {% if topolvms_storage_tolerations -%}
  tolerations:
  {% for item in topolvms_storage_tolerations -%}
  - key: "{{ item['key'] }}"
    value: "{{ item['value'] }}"
    effect: "{{ item['effect'] }}"
  {% endfor -%}
  {% endif -%}
  storage:
    deviceClasses:
    - name: {{ topolvms_storage_class }}
      fstype: {{ topolvms_fstype }}
      default: true
      deviceSelector:
        paths:
        {% for item in topolvms_disk_list -%}
        - {{ item }}
        {% endfor -%}
        forceWipeDevicesAndDestroyAllData: {{ topolvms_force_wipe_devices_and_destroy_all_data }}
      thinPoolConfig:
        name: {{ topolvms_thin_pool_name }}
        sizePercent: {{ topolvms_thin_pool_size_percent }}
        overprovisionRatio: {{ topolvms_thin_pool_overprovision_ratio }}